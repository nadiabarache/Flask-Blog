# ourapp/forms.py


from wtforms import Form, StringField, PasswordField, TextField, SelectField, validators
from wtforms.validators import DataRequired

class LoginForm(Form):
    email = TextField(u'username', [validators.Required()])
    password = PasswordField(u'password', [validators.Required()])

class PostForm(Form):
    title = TextField(u'Titre', [validators.Length(min=6, max=200)])
    description = TextField(u'Description', [validators.Length(max=300)])
    body = TextField(u'Titre', [validators.Length(min=6, max=200)])
    category-id = SelectField(u'Category_id', choices=[1,2,3,4])

